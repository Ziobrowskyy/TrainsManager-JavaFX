<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="com.ziobrowski.controllers.TrainsController" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
       <HBox alignment="CENTER" spacing="5.0">
           <VBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
           </VBox.margin>
          <children>
              <Label prefHeight="25.0" text="Origin" />
              <ComboBox fx:id="originStationComboBox" prefWidth="120.0" />
      
              <Label prefHeight="25.0" text="Destination" />
              <ComboBox fx:id="destinationStationComboBox" prefHeight="25.0" prefWidth="120.0" />
      
              <Label prefHeight="25.0" text="Time" />
              <ComboBox fx:id="hourComboBox" prefHeight="25.0" prefWidth="78.0" />
              <Label prefHeight="25.0" text=":" />
              <ComboBox fx:id="minuteComboBox" prefHeight="25.0" prefWidth="72.0" />
          </children>
       </HBox>
      <HBox spacing="5.0">
         <children>
            <Label prefHeight="25.0" text="Name filter" />
            <TextField fx:id="nameTextField" prefWidth="200.0" promptText="Train station name" HBox.hgrow="ALWAYS" />
            <Button fx:id="clearFiltersButton" mnemonicParsing="false" text="Clear filters" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
       <TableView fx:id="trainTableView">
           <columns>
               <TableColumn fx:id="nameColumn" text="Name" />
               <TableColumn fx:id="originColumn" text="Origin" />
               <TableColumn fx:id="destinationColumn" text="Destination" />
               <TableColumn fx:id="departureTimeColumn" text="Departure time" />
               <TableColumn fx:id="travelTimeColumn" text="Travel time" />
           </columns>
           <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
           </columnResizePolicy>
       </TableView>
   </children>
</VBox>
